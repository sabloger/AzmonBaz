<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.kokabi.p.azmonbaz.Components.CTextViewSansMedium
            android:id="@+id/breadCrumb_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:singleLine="true"
            android:textColor="@color/darkPrimaryColor"
            android:textSize="14sp" />

        <com.kokabi.p.azmonbaz.Components.CTextViewSansMedium
            android:id="@+id/treeTitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/darkGray"
            android:textSize="18sp" />

        <com.kokabi.p.azmonbaz.Components.CTextViewSans
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="@color/darkGray"
            android:textSize="15sp" />

        <com.rey.material.widget.ProgressView
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:pv_autostart="true"
            app:pv_circular="false"
            app:pv_progressMode="determinate"
            app:pv_progressStyle="@style/LinearProgressNormal" />

    </LinearLayout>

</android.support.v7.widget.CardView>